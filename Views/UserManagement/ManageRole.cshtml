@using Employewebapp.Models
@{
    var user = ViewBag.User as User;
    var allRoles = ViewBag.AllRoles as List<Roles> ?? new List<Roles>();
    var assignedRoleIds = ViewBag.AssignedRoleIds as List<int> ?? new List<int>();
}

@if (user != null)
{
    <div class="container mt-4">
        <div class="card shadow-lg border-0 rounded-3">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Manage Roles for @user.Name</h4>
            </div>
            <div class="card-body">
                <form asp-action="ManageRole" method="post">
                    <input type="hidden" name="userId" value="@user.Id" />

                    <div class="mb-3">
                        <label class="form-label fw-bold">Select Roles</label>
                        <div class="row">
                            @foreach (var role in allRoles)
                            {
                                <div class="col-md-4">
                                    <div class="form-check">
                                        <input type="checkbox"
                                               class="form-check-input"
                                               name="selectedRoles"
                                               value="@role.Id"
                                               @(assignedRoleIds.Contains(role.Id) ? "checked" : "") />
                                        <label class="form-check-label">@role.Name</label>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="d-flex justify-content-end mt-4">
                        <button type="submit" class="btn btn-success me-2">💾 Save Roles</button>
                        <a asp-action="Userlist" class="btn btn-secondary">↩ Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
else
{
    <p class="text-danger">User not found.</p>
}
