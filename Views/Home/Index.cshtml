@model IEnumerable<CreateEmployee>

@{
    ViewData["Title"] = "Home";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee Portal</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center mb-4">Employee Portal — Stepper</h2>

        <!-- Stepper tabs -->
        <ul class="nav nav-pills mb-3 justify-content-center" id="stepperTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="step1-tab" data-bs-toggle="pill" data-bs-target="#step1" type="button" role="tab">
                    Employee Information
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="step2-tab" data-bs-toggle="pill" data-bs-target="#step2" type="button" role="tab">
                    Review & Finish
                </button>
            </li>
        </ul>

        <!-- Stepper content -->
        <div class="tab-content" id="stepperContent">

            <!-- STEP 1 -->
            <div class="tab-pane fade show active" id="step1" role="tabpanel" aria-labelledby="step1-tab">
                <div class="card p-4 shadow-sm">
                    <h4 class="mb-3">Step 1: Employee Information</h4>
                    <p>Employee details are listed below:</p>

                    <!-- Employee Table -->
                    <table>
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Phone</th>
                                <th>Salary</th>
                                <th>Description</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var emp in Model)
                                {
                                    <tr>
                                        <td>@emp.Id</td>
                                        <td>@emp.Name</td>
                                        <td>@emp.Phone</td>
                                        <td>@emp.Salary</td>
                                        <td>@emp.Description</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5">No data available.</td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <div class="d-flex justify-content-end mt-3">
                        <button type="button" class="btn btn-primary" id="nextStep">Next</button>
                    </div>
                </div>
            </div>

            <!-- STEP 2 -->
            <div class="tab-pane fade" id="step2" role="tabpanel" aria-labelledby="step2-tab">
                <div class="card p-4 shadow-sm">
                    <h4 class="mb-3">Step 2: Review & Finish</h4>
                    <p>Review employee details above and finish process.</p>

                    <!-- Inline success message -->
                    <div id="finishSuccess" class="alert alert-success d-none" role="alert">
                        Finished successfully!
                    </div>

                    <div class="d-flex justify-content-between">
                        <button type="button" class="btn btn-secondary" id="prevStep">Back</button>
                        <button type="button" class="btn btn-success" id="finishStep">Finish</button>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <!-- Navigation & Finish -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Next / Back
            document.getElementById("nextStep")?.addEventListener("click", function () {
                document.getElementById("step2-tab").click();
            });
            document.getElementById("prevStep")?.addEventListener("click", function () {
                document.getElementById("step1-tab").click();
            });

            // Finish (no confirm popup)
            document.getElementById("finishStep")?.addEventListener("click", function () {
                const success = document.getElementById("finishSuccess");
                if (success) success.classList.remove("d-none");
            });
        });
    </script>
</body>
</html>
